<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <Button
        android:id="@+id/dificilbtn"
        android:layout_width="163dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:text="Difícil"
        android:onClick="dificilOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:layout_constraintVertical_bias="0.012" />

    <Button
        android:id="@+id/normalbtn"
        android:layout_width="163dp"
        android:layout_height="73dp"
        android:layout_marginTop="4dp"
        android:text="Normal"
        android:onClick="normalOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dificilbtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/facilbtn"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:text="Fácil"
        android:onClick="facilOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/normalbtn"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="188dp"
        android:layout_height="59dp"
        android:text="Ajustes"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293" />

    <Button
        android:id="@+id/musicbtn"
        android:layout_width="167dp"
        android:layout_height="73dp"
        android:text="Silenciar Música"
        android:onClick="musicOnClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facilbtn"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>